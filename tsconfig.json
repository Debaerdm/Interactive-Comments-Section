{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"typeRoots": [
			"node_modules/@types"
		],
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"resolveJsonModule": true,
		"baseUrl": "src",
		"allowJs": true,
		"checkJs": true
	},
	"include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
	"references": [{ "path": "./tsconfig.node.json" }]
}